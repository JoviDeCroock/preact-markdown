{
  "name": "preact-md",
  "type": "module",
  "version": "0.2.0",
  "description": "Render markdown in Preact applications with ease.",
  "license": "MIT",
  "homepage": "https://github.com/JoviDeCroock/preact-markdown#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JoviDeCroock/preact-markdown.git"
  },
  "bugs": {
    "url": "https://github.com/JoviDeCroock/preact-markdown/issues"
  },
  "keywords": ["preact", "vitest"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./lite": {
      "types": "./dist/lite.d.ts",
      "default": "./dist/lite.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "packageManager": "pnpm@10.21.0",
  "files": ["dist", "src", "CHANGELOG.md", "README.md", "LICENSE"],
  "scripts": {
    "prepublishOnly": "pnpm build && pnpm vitest run",
    "build": "tsup",
    "dev": "vite",
    "format": "biome format --write",
    "format:check": "biome format",
    "lint": "oxlint",
    "test": "vitest run",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json}": "biome format --write"
  },
  "peerDependencies": {
    "preact": "^10.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@preact/preset-vite": "^2.10.2",
    "@types/hast": "^3.0.4",
    "@vitest/browser-playwright": "^4.0.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "oxlint": "^0.16.12",
    "playwright": "^1.46.0",
    "preact": "^10.0.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "vite": "^6.4.1",
    "vitest": "^4.0.5"
  },
  "dependencies": {
    "hast-util-sanitize": "^5.0.2",
    "marked": "^17.0.1",
    "rehype-sanitize": "^6.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "unified": "^11.0.5"
  }
}
